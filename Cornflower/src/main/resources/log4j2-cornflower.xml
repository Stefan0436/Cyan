<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="org.asf.cyan.cornflower.gradle.utilities">
  <Appenders>
    <Log4jToGradleAppender name="Gradle" >
      <PatternLayout
		pattern="[%d{HH:mm:ss} %5level] - %msg%n%throwable" />
    </Log4jToGradleAppender>
  </Appenders>
  <Loggers>
    <Root level="all">
      <AppenderRef ref="Gradle" level="trace" />
    </Root>
  </Loggers>
</Configuration>
